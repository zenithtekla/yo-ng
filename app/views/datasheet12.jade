h3 {{ tpl_data.title}}
br
.table-responsive
  table.table.table-bordered.table-striped.table-condensed
    thead
      tr
        th(colspan='2')
          input(type='text', ng-model='query')
          span(ng-show='query') Search for "{{query}}"
          span(ng-show='!query') Search...
        th
          select(ng-model='ds12.selectedValue', ng-options='value for value in ds12.items')
        th
        th
          a(href='#') <<
          |             
          a(href='#') 1
          |             
          a(href='#') 49
          |             
          a(href='#') 50
          |             
          a(href='#') 51
          |             
          a(href='#') 100
          |             
          a(href='#') >>
        th(colspan='2')
          button.btn-xs.btn-primary(ng-click='refresh()')
            span.glyphicon.glyphicon-refresh
            |                 Refresh (F7)
          button.btn-xs.btn-primary(ng-click='save()')
            span.glyphicon.glyphicon-floppy-disk
            |                 Save (F8)
          button.btn-xs.btn-primary(ng-click='export()')
            span.glyphicon.glyphicon-print
            |                 Print (F9)
      tr
        th  {{ tpl_data.txt.start }} 
        th  {{ tpl_data.start_date }} 
        th  {{ tpl_data.txt.end }} 
        th  {{ tpl_data.end_date }} 
        th  {{ tpl_data.txt.total }} 
        th(colspan='2')  {{ tpl_data.total }} 
    thead.thead-inverse
      tr
        th  {{ tpl_data.customer }} 
        th  {{ tpl_data.assembly }} 
        th  {{ tpl_data.date_received }} 
        th  {{ tpl_data.time_received }} 
        th  {{ tpl_data.date_completed }} 
        th  {{ tpl_data.time_completed }} 
        th  {{ tpl_data.action }} 
    tbody
      tr(ng-repeat='entry in ds12.entries | filter:query')
        td
          input(type='text', ng-model='entry.customer', ng-change='ds12.entries.$save(entry)')
        td
          input(type='text', ng-model='entry.assembly', ng-change='ds12.entries.$save(entry)')
        td
          input(type='text', ng-model='entry.date_received', ng-change='ds12.entries.$save(entry)')
        td
          input(type='text', ng-model='entry.time_received', ng-change='ds12.entries.$save(entry)')
        td
          input(type='text', ng-model='entry.date_completed', ng-change='ds12.entries.$save(entry)')
        td
          input(type='text', ng-model='entry.time_completed', ng-change='ds12.entries.$save(entry)')
        td
          button.btn-xs.btn-danger(ng-click='ds12.entries.splice($index,1)') -
      tr
        td
          input(type='text', ng-model='new_entry.customer')
        td
          input(type='text', ng-model='new_entry.assembly')
        td
          input(type='text', ng-model='new_entry.date_received')
        td
          input(type='text', ng-model='new_entry.time_received')
        td
          input(type='text', ng-model='new_entry.date_completed')
        td
          input(type='text', ng-model='new_entry.time_completed')
        td
          button.btn-xs.btn-success(ng-click='insert()') Insert
